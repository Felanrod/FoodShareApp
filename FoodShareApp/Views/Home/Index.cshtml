@model IEnumerable<FoodShareApp.FoodProvider>
@{
    ViewBag.Title = "Home Page";
}


<h1 class="text-center">Welcome to The FoodShare Map</h1>
<h2 class="text-center mb-4">Share Food? Need Food? Join Us!</h2>
<section>
    <!--Grid row-->
    <div class="row d-flex">
        @foreach (var foodprovider in Model)
        {
            <!--Grid column-->
            <div class="col-md-4 mb-3 d-flex">
                <!-- Card -->
                <div class="card">
                    <!-- Card image -->
                    <div class="view overlay">
                        @if (foodprovider.LogoUrl.IsEmpty())
                        {
                            <img class="card-img-top" src="~/Content/Images/foodbank-placeholder.jpg" alt="Placeholder Image">
                        }
                        else
                        {
                            <img class="card-img-top" src="@foodprovider.LogoUrl" alt="@foodprovider.Name">
                        }
                        <a href="../FoodProviders/Details/@foodprovider.FoodProviderId">
                            <div class="mask rgba-white-slight"></div>
                        </a>
                    </div>
                    <!-- Card content -->
                    <div class="card-body d-flex flex-column ">
                        <!-- Title -->
                        <h4 class="card-title">@foodprovider.Name</h4>
                        <h5 class="card-title">@foodprovider.ProviderType.ProviderType1</h5>
                        <!-- Text -->
                        <p class="card-text mb-auto">@foodprovider.Services</p>
                        <!-- Button -->
                        <div class="card-footer bg-white mt-3 px-0 pb-0">
                            <a href="../FoodProviders/Details/@foodprovider.FoodProviderId" class="btn btn-secondary">Map It!</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Card -->
        }
        @* ================================ END OF PROVIDERS ================================ *@
    </div>
</section>
<section id="btnJoin">
    <a href="/account/Register" id="joinUs" class="btn btn-primary btn-lg">
        <span>Join Us</span>
    </a>
@*added login cta*@
    < a href = "/account/Login" id = "logIn" class="btn btn-outline-primary btn-lg ml-5">
        <span>Log in</span>
    </a>

</section>

<section class="card-deck-wrapper">
    <div class="card-deck row">
        <div class="col-md-6">
            <h2 class="text-center">Locate Food</h2>
            <!-- Card -->
            <div class="card card-custom card-other mx-auto d-block shadow p-3 mb-5 bg-white rounded ">
                <!-- Card image -->
                <div class="view overlay">
                    <img class="card-img-top" src="~/Content/Images/mapbox-map-mockup.jpg" alt="Card image cap">
                    <div class="card-img-overlay mt-5 mr-4 ">
                        <i class="fas fa-map-marker fa-2x d-flex justify-content-center " aria-hidden="true"></i>

                    </div>
                    <a href="/Map">
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>
            </div> <!-- Card -->
        </div>
        @* ================================ END LOCATE FOOD ================================ *@
        <div class="col-md-6">
            <h2 class="text-center">Community Events</h2>
            <!-- Card -->

            <div class="card card-custom card-other mx-auto d-block shadow p-3 mb-5 bg-white rounded">
                <img class="card-img" src="~/Content/Images/community-garden.jpg" alt="Card image">
                <div class="card-img-overlay mt-2 mr-4 custom-card-text ">
                    <p class="card-title  mt-5">
                        <strong>Community Garden</strong>
                    </p>

                    <p>When: May 26, 2019 </p>
                    <p>Where: The Sharing Place,  Orillia</p>
                    <p>Bring: Yourself, family and friends!</p>
                    <p> Learn more: <a class="custom-card-text" href="Events">Community Events</a></p>
                </div>
            </div>




            @* <div class="card card-other mx-auto d-block shadow p-3 mb-5 bg-white rounded">
                <!-- Card image -->
                <div class="view overlay">
                    <div class="card-img-overlay">
                        <img class="card-img-top" src="~/Content/Images/community-garden.jpg" alt="Card image cap">
                        <a href="/Events">
                            <div class="mask rgba-white-slight"></div>
                        </a>

                    </div>
                </div> <!-- Card -->*@
        </div>
    </div>
</section>
