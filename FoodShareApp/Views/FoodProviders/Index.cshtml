            @Html.DisplayFor(modelItem => item.PostalCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProviderType.ProviderType1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Services)
        </td>
        <td>
            <a href="@item.Website">@item.Website</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Verified)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Admin)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.FoodProviderId }) |
            @Html.ActionLink("Details", "Details", new { id = item.FoodProviderId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.FoodProviderId })
        </td>
    </tr>
}

</table>
