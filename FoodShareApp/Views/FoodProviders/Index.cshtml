@model IEnumerable<FoodShareApp.FoodProvider>

@{
    ViewBag.Title = "Food Sources";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Food Sharers</h1>
<div class="card card-custom">
    <div class="card-body">
        <table class="table p-3 mb-5 bg-white rounded">
            <caption>List of Food Sharers</caption>
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LogoUrl)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.Street)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.City)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Province)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Country)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PostalCode)
                        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProviderType.ProviderType1)
                        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.Services)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Website)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.Verified)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Admin)
                        </th>*@
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td data-title="Name">
                        @Html.ActionLink(item.Name, "Details", new { id = item.FoodProviderId })
                    </td>
                    <td data-title="Image">
                        <img src="@item.LogoUrl" width="100" alt="" />
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Street)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Province)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Country)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostalCode)
                        </td>*@
                    <td data-title="Phone">
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProviderType.ProviderType1)
                        </td>*@
                    <td data-title="Services">
                        @Html.DisplayFor(modelItem => item.Services)
                    </td>
                    <td data-title="Website">
                        <a href="@item.Website">@item.Website</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
