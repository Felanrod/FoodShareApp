    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <img src="@item.LogoUrl" width="100" alt="" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Street)
        </td>
