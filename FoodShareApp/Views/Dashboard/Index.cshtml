@model FoodShareApp.Models.DashboardViewModel
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="dashboardTabs">
    <h2>Admin Dashboard</h2>
    <ul>
        <li>
            <a href="#dashFood">Food Sharers</a>
        </li>
        <li>
            <a href="#dashFood">My Food</a>
        </li>
        <li>
            @Html.ActionLink("Notifications", "Notifications")
        </li>
    </ul>
</section>
<section id="dashFoodProviders">

    <h3>Verified Food Providers</h3>
    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Logo
            </th>
            <th>
                Address
            </th>
            <th>
                PhoneNumber
            </th>
            <th>
                Email
            </th>
            <th>
                Provider Type
            </th>
            <th>
                Website
            </th>
            @*<th>
                Verified
            </th>*@
            <th>
                Admin
            </th>
        </tr>

        @foreach (var foodProvider in Model.foodProvider)
        {
            if (foodProvider.Verified)
            {

        <tr>
            <td>
                @foodProvider.Name
            </td>
            <td>
                <img src="@foodProvider.LogoUrl" width="100" alt="" />
            </td>
            <td>
                @foodProvider.Street @foodProvider.City, @foodProvider.Province, @foodProvider.PostalCode
            </td>
            <td>
                @foodProvider.PhoneNumber
            </td>
            <td>
                @foodProvider.Email
            </td>
            <td>
                @foodProvider.ProviderType.ProviderType1
            </td>
            <td>
                <a href="@foodProvider.Website">@foodProvider.Website</a>
            </td>
            @*<td>
            @foodProvider.Verified
        </td>*@
            <td>
                @foodProvider.Admin
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "FoodProviders", new { id = foodProvider.FoodProviderId }, null) |
                @Html.ActionLink("Delete", "Delete", "FoodProviders", new { id = foodProvider.FoodProviderId }, null)
            </td>

        </tr>
            } // end if
        }

    </table>
</section>
<section id="dashFoods">
    <h3>Foods</h3>
    <table class="table">
        <tr>
            <th>
                Food Type
            </th>
            <th>
                Name
            </th>
            <th>
                Provider Id
            </th>
            <th>
                Amount
            </th>
            <th>
                Urgent
            </th>
            <th>
                Notes
            </th>
            <th>
                Date Created
            </th>
        </tr>
        @foreach (var food in Model.food)
        {
            <tr>
                <td>
                    @food.FoodType.FoodType1
                </td>
                <td>
                    @food.FoodName
                </td>
                <td>
                    @food.FoodProviderId
                </td>
                <td>
                    @food.FoodAmountId
                </td>
                <td>
                    @food.Urgent
                </td>
                <td>
                    @food.Notes
                </td>
                <td>
                    @food.DateCreated
                </td>
            </tr>
        }
    </table>
</section>
<section id="dashEvents">
    <h3>Events</h3>
    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Date
            </th>
            <th>
                Time
            </th>
            <th>
                Location
            </th>
            <th>
                Contact
            </th>
            <th>
                Notes
            </th>
        </tr>
        @if (Model.events != null)
        {
        foreach (var _event in Model.events)
        {
            <tr>
                <td>
                    @_event.EventName
                </td>
                <td>
                    @_event.EventDate
                </td>
                <td>
                    @_event.EventTime
                </td>
                <td>
                    @_event.Location
                </td>
                <td>
                    @_event.Phone | @_event.Email
                </td>
                <td>
                    @_event.Notes
                </td>
            </tr>
        }
        }
    </table>
</section>
